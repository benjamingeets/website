---
import Main from './Main.astro'
import Icon from '../components/Icon.jsx'
const { content } = Astro.props
---

<Main title={content.title} description={content.description}>
<div class="fixed md:left-4 md:bottom-auto bottom-0 md:w-auto w-screen p-2">
    <a href="/portfolio" class="dark:bg-gray-800 dark:border-gray-800 dark:hover:bg-gray-900 dark:hover:text-blue-400 dark:text-blue-300 flex md:justify-start justify-center items-center bg-gray-200 border hover:bg-gray-100 p-2 rounded-md  text-blue-800 hover:text-indigo-400">
        <Icon name="Arrow-back"/>
        Retour
    </a>
</div>
<article class="markdown max-w-2xl mx-auto mt-10 px-2">

<small>
{content.techno.map(e=>(
    <span>#{e}&nbsp;</span>
))}
</small>
<slot/>
</article>
{(content.github || content.lien) &&
<div class="flex flex-wrap justify-center my-10 gap-4">
        {content.github && 
                    <a class="dark:bg-gray-800 dark:border-gray-800 dark:hover:bg-gray-900 dark:hover:text-blue-400 dark:text-blue-300 text-center bg-gray-200 border hover:bg-gray-100 p-2 rounded-md  text-blue-800 hover:text-indigo-400" href={content.github}>🐱 Code source</a>
        }
        {content.lien && 
        
                    <a class="dark:bg-gray-800 dark:border-gray-800 dark:hover:bg-gray-900 dark:hover:text-blue-400 dark:text-blue-300 text-center bg-gray-200 border hover:bg-gray-100 p-2 rounded-md  text-blue-800 hover:text-indigo-400" href={content.lien}>🔗 { content.lien } </a>
}
    </div>
}
<div class="md:h-0 h-20">
</div>
</Main>
