---
import Main from '../../layouts/Main.astro'
import Icon from '../../components/Icon.jsx'
export async function getStaticPaths() {
    const data = Astro.fetchContent("../../portfolio/*.md")
    const rep = data.map(d=>{
        return {
          params:{slug:d.slug},
          props:{...d
            }}
    })
  return rep
}
const {title,content,techno,description,lien,github} = Astro.props
---

<Main title={title} description={description}>
<div class="fixed bottom-0 w-screen p-2 md:left-4 md:bottom-auto md:w-auto">
    <div class="relative flex items-center justify-center p-2 text-blue-800 bg-gray-200 border rounded-md dark:bg-gray-800 dark:border-gray-800 dark:hover:bg-gray-900 dark:hover:text-blue-400 dark:text-blue-300 md:justify-start hover:bg-gray-100 hover:text-indigo-400">
        <Icon name="Arrow-back"/>
        <a href="/portfolio" class="before:absolute before:w-full before:h-full before:left-0 before:top-0">Portfolio</a>
    </div>
</div>
<article class="px-2 mx-auto mt-10 max-w-64ch markdown">

<small>
{techno.map(e=>(
    <span>#{e}&nbsp;</span>
))}
</small>
{content.html}
</article>
{(github || lien) &&
<div class="flex flex-wrap justify-center gap-4 my-10">
        {github && 
                    <a class="p-2 text-center text-blue-800 bg-gray-200 border rounded-md dark:bg-gray-800 dark:border-gray-800 dark:hover:bg-gray-900 dark:hover:text-blue-400 dark:text-blue-300 hover:bg-gray-100 hover:text-indigo-400" href={github}>🐱 Code source</a>
        }
        {lien && 
        
                    <a class="p-2 text-center text-blue-800 bg-gray-200 border rounded-md dark:bg-gray-800 dark:border-gray-800 dark:hover:bg-gray-900 dark:hover:text-blue-400 dark:text-blue-300 hover:bg-gray-100 hover:text-indigo-400" href={lien}>🔗 { lien } </a>
}
    </div>
}
<div class="h-20 md:h-0">
</div>
</Main>
