---
import Main from '../../layouts/Main.astro'
import Icon from '../../components/Icon.jsx'
export async function getStaticPaths() {
    const data = Astro.fetchContent("../../portfolio/*.md")
    const rep = data.map(d=>{
        return {
          params:{slug:d.slug},
          props:{...d
            }}
    })
  return rep
}
const {title,content,techno,description,lien,github} = Astro.props
---

<Main title={title} description={description}>
<div class="fixed md:left-4 md:bottom-auto bottom-0 md:w-auto w-screen p-2">
    <a href="/portfolio" class="dark:bg-gray-800 dark:border-gray-800 dark:hover:bg-gray-900 dark:hover:text-blue-400 dark:text-blue-300 flex md:justify-start justify-center items-center bg-gray-200 border hover:bg-gray-100 p-2 rounded-md  text-blue-800 hover:text-indigo-400">
        <Icon name="Arrow-back"/>
        Portfolio
    </a>
</div>
<article class="markdown max-w-2xl mx-auto mt-10 px-2">

<small>
{techno.map(e=>(
    <span>#{e}&nbsp;</span>
))}
</small>
{content.html}
</article>
{(github || lien) &&
<div class="flex flex-wrap justify-center my-10 gap-4">
        {github && 
                    <a class="dark:bg-gray-800 dark:border-gray-800 dark:hover:bg-gray-900 dark:hover:text-blue-400 dark:text-blue-300 text-center bg-gray-200 border hover:bg-gray-100 p-2 rounded-md  text-blue-800 hover:text-indigo-400" href={github}>🐱 Code source</a>
        }
        {lien && 
        
                    <a class="dark:bg-gray-800 dark:border-gray-800 dark:hover:bg-gray-900 dark:hover:text-blue-400 dark:text-blue-300 text-center bg-gray-200 border hover:bg-gray-100 p-2 rounded-md  text-blue-800 hover:text-indigo-400" href={lien}>🔗 { lien } </a>
}
    </div>
}
<div class="md:h-0 h-20">
</div>
</Main>
