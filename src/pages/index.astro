---
import Main from '../layouts/Main.astro'
import Icon from '../components/Icon.jsx'

const links = [
{
text:'Github',href:'https://github.com/benjamingeets',external:true
},
{
text:'Portfolio',href:'/portfolio',external:false
},
{
text:'Blog',href:'/blog',external:false
},
{
text:'Contact',href:'mailto:benjamin@geets.dev',external:false
}
]

const mainStack = ['SvelteKit',"React",'Node.js','Tailwind','Jamstack']
const secondaryStack = ['Vue','Astro','11ty']

---
<style>
    .link .outside {
        display: none;
    }

    .link:hover .outside {
        display: block;
    }
</style>
<Main index={true}>
    <div class="w-screen min-h-screen dark:bg-gray-900 dark:text-gray-100">
        <main class="flex items-center max-w-3xl min-h-screen mx-auto sm:p-4">
            <div
                class="flex flex-col w-full min-h-screen p-8 bg-gray-200 dark:bg-gray-800 sm:rounded-lg sm:min-h-0 md:flex-row md:justify-between">
                <div class="flex flex-col md:w-9/12 w-12/12">
                    <h1 class="text-3xl font-bold md:text-5xl">Benjamin Geets üçÉ</h1>
                    <h2 class="my-2 text-lg font-bold md:text-2xl">D√©veloppeur web</h2>
                    <p class="flex flex-wrap">
                        {mainStack.map(e=>(
                        <span>#{e}&nbsp;</span>
                        ))}
                        <small>
                            {secondaryStack.map(e=>(
                            <span>#{e}&nbsp;</span>
                            ))}
                        </small>
                    </p>
                </div>
                <hr class="block h-1 my-4 bg-gray-600 md:hidden">
                <ul class="flex flex-row flex-wrap md:w-2/12 w-12/12 md:flex-col md:justify-center">
                    {links.map(e=>(
                    <li class="flex mt-2 mr-2">
                        <div
                            class="relative flex font-bold text-gray-600 transition link dark:text-gray-300 hover:text-green-600">
                            <Icon name={e.text} />
                            {e.external &&
                            <a rel="noopener" target="_blank" href={e.href}
                                class="mx-2 before:absolute before:w-full before:h-full before:left-0">{e.text}</a>
                            <span class="outside">
                                <Icon name="External" />
                            </span>
                            }
                            {!e.external &&
                            <a href={e.href}
                                class="mx-2 before:absolute before:w-full before:h-full before:left-0">{e.text}</a>
                            }
                        </div>
                    </li>
                    ))}
                </ul>
            </div>
        </main>
    </div>
</Main>